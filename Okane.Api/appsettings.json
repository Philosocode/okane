{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "System": "Error"
      }
    },
    "Using": ["Serilog.Enrichers.ClientInfo"],
    "Enrich": [
      "WithClientIp",
      {
        "Name": "WithRequestHeader",
        "Args": { "headerName": "User-Agent"}
      }
    ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "path": "Infrastructure/Logging/Logs/log.txt",
          "restrictedToMinimumLevel": "Debug",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "IssuerSigningKey": "change-this-to-something-secure",
    "Issuer": "https://api.philosocode.com",
    "Audience": "https://client.philosocode.com",
    "MinutesToExpiration": "1440"
  }
}
